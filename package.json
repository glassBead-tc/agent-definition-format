{
  "name": "@waldzellai/adf-framework",
  "version": "0.1.0",
  "description": "Declarative framework for defining MCP agents with YAML/JSON and runtime interpreters",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "type": "module",
  "bin": {
    "adf": "./dist/cli-effect.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint src --ext ts",
    "typecheck": "tsc --noEmit",
    "start": "node dist/cli-effect.js",
    "example": "node dist/cli-effect.js run examples/customer-support.yaml",
    "postinstall": "echo 'Run \"adf --help\" to get started with the ADF framework'"
  },
  "keywords": [
    "mcp",
    "agent",
    "declarative",
    "yaml",
    "workflow"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@anthropic-ai/sdk": "^0.32.1",
    "@effect/platform": "^0.90.2",
    "@effect/schema": "^0.75.5",
    "@effect/vitest": "^0.25.0",
    "@modelcontextprotocol/sdk": "^1.0.4",
    "ajv": "^8.17.1",
    "commander": "^14.0.0",
    "effect": "^3.17.7",
    "js-yaml": "^4.1.0",
    "winston": "^3.17.0",
    "xstate": "^5.19.0",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@types/jest": "^29.5.14",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^22.10.2",
    "@typescript-eslint/eslint-plugin": "^8.18.1",
    "@typescript-eslint/parser": "^8.18.1",
    "eslint": "^9.17.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.2.5",
    "typescript": "^5.7.2"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
